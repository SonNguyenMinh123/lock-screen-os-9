<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id = "@+id/newsCardView"
        android:layout_width = "@dimen/_280sdp"
        android:layout_height = "@dimen/_280sdp"
        card_view:cardBackgroundColor = "#3f2b608a"
        card_view:cardCornerRadius = "@dimen/_10sdp" >
        <ImageView
            android:id="@+id/iv_bg_cardview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/blur"
            />
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp">
                <ImageView
                    android:src="@drawable/ic_music"
                    android:id="@+id/iv_pager_music_icon"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/color_bottombar"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp" />
                <LinearLayout
                    android:layout_margin="@dimen/_5sdp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.abc.xyz.os10.views.MyTextViewBold
                        android:id="@+id/tv_pager_music_title"
                        android:textColor="#151515"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textSize="@dimen/_17sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="..."/>
                    <com.abc.xyz.os10.views.MyTextView
                        android:id="@+id/tv_pager_music_author"
                        android:textColor="#3d3d3d"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_17sdp"
                        android:text="..."/>
                </LinearLayout>
            </LinearLayout>
            <SeekBar
                android:id="@+id/skb_pager_music_play"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/txv_partial_slideup__time_duration"
                android:layout_toRightOf="@+id/txv_partial_slideup__time_play"
                android:indeterminate="false"
                android:progress="0"
                android:thumb="@drawable/ic_thumb_music"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/tv_pager_music_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="00:00"
                    android:textColor="@android:color/background_dark"/>



                <TextView
                    android:id="@+id/tv_pager_music_stop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:text="00:00"
                    android:textColor="@android:color/background_dark"/>

            </RelativeLayout>
            <LinearLayout
                android:gravity="center"
                android:id="@+id/rll_partial_slideup__music"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/iv_pager_music_repeat"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_50sdp"
                    android:padding="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="?android:selectableItemBackground"
                    android:scaleType="centerInside"
                    android:src="@drawable/bg_checked_repeat_song"/>

                <ImageView
                    android:id="@+id/iv_pager_music_prev"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_10sdp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/bg_pressed_prev"
                    />

                <ImageView
                    android:id="@+id/iv_pager_music_play_pause"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/_10sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_centerInParent="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/bg_checked_play_or_pause"
                    android:checked="false"
                    android:gravity="center"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:textOff=""
                    android:textOn=""/>

                <ImageView
                    android:id="@+id/iv_pager_music_next"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/_10sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/bg_pressed_next"
                    />

                <ImageView
                    android:id="@+id/iv_pager_music_list_music"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_50sdp"
                    android:padding="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="?android:selectableItemBackground"
                    android:scaleType="centerInside"
                    android:src="@drawable/bg_pressed_music_menu"/>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <SeekBar
                    android:id="@+id/skb_pager_music_volume"
                    style="@style/SeekBarAppThemeColorize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/imageView4"
                    android:layout_toRightOf="@+id/imageView3"
                    android:progress="50"/>

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_volumn_down"/>

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_volumn_up"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>