<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/lot_passcode_bg"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:id="@+id/img_activity_setcpasscode_background"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
           />
    </FrameLayout>


    <RelativeLayout
        android:id="@+id/lout_password"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#a0000000"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <RelativeLayout
                android:id="@+id/lout_dot"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20.0dip">

                <com.abc.xyz.views.widgets.TextviewIPBold
                    android:id="@+id/txv_activity_setcpasscode_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/_14sdp"
                    android:text="@string/p_confirmpass"
                    android:textColor="#ffffffff"/>

                <RelativeLayout
                    android:id="@+id/rll_activity_setcpasscode_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txv_activity_setcpasscode_pass"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10.0dip">

                    <ImageView
                        android:id="@+id/img_activity_setcpasscode_dot1"
                        android:layout_width="@dimen/_11sdp"
                        android:layout_height="@dimen/_11sdp"
                        android:layout_marginRight="10.0dip"
                        android:src="@drawable/open_dot"/>

                    <ImageView
                        android:id="@+id/img_activity_setcpasscode_dot2"
                        android:layout_width="@dimen/_11sdp"
                        android:layout_height="@dimen/_11sdp"
                        android:layout_marginRight="10.0dip"
                        android:layout_toRightOf="@id/img_activity_setcpasscode_dot1"
                        android:src="@drawable/open_dot"/>

                    <ImageView
                        android:id="@+id/img_activity_setcpasscode_dot3"
                        android:layout_width="@dimen/_11sdp"
                        android:layout_height="@dimen/_11sdp"
                        android:layout_marginRight="10.0dip"
                        android:layout_toRightOf="@id/img_activity_setcpasscode_dot2"
                        android:src="@drawable/open_dot"/>

                    <ImageView
                        android:id="@+id/img_activity_setcpasscode_dot4"
                        android:layout_width="@dimen/_11sdp"
                        android:layout_height="@dimen/_11sdp"
                        android:layout_toRightOf="@id/img_activity_setcpasscode_dot3"
                        android:src="@drawable/open_dot"/>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lout_dot">

                <RelativeLayout
                    android:id="@+id/lot_num_line1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="15.0dip">

                    <com.abc.xyz.views.partials.KeypadItemLayout
                        android:id="@+id/btn_activity_setcpasscode_num1"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_marginRight="15.0dip"
                        app:textchar=""
                        app:textNum="1"
                        android:textColor="#ffffffff"
                        />

                    <com.abc.xyz.views.partials.KeypadItemLayout
                        android:id="@+id/btn_activity_setcpasscode_num2"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_marginRight="15.0dip"
                        android:layout_toRightOf="@id/btn_activity_setcpasscode_num1"
                        app:textchar="abc"
                        app:textNum="2"
                        android:textColor="#ffffffff"
                        />

                    <com.abc.xyz.views.partials.KeypadItemLayout
                        android:id="@+id/btn_activity_setcpasscode_num3"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_toRightOf="@id/btn_activity_setcpasscode_num2"
                        app:textchar="def"
                        app:textNum="3"
                        android:textColor="#ffffffff"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lot_num_line2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lot_num_line1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="15.0dip">

                    <com.abc.xyz.views.partials.KeypadItemLayout
                        android:id="@+id/btn_activity_setcpasscode_num4"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_marginRight="15.0dip"
                        app:textchar="ghi"
                        app:textNum="4"
                        android:textColor="#ffffffff"
                        />

                    <com.abc.xyz.views.partials.KeypadItemLayout
                        android:id="@+id/btn_activity_setcpasscode_num5"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_marginRight="15.0dip"
                        android:layout_toRightOf="@id/btn_activity_setcpasscode_num4"
                        app:textchar="jkl"
                        app:textNum="5"
                        android:textColor="#ffffffff"
                        />

                    <com.abc.xyz.views.partials.KeypadItemLayout
                        android:id="@+id/btn_activity_setcpasscode_num6"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_toRightOf="@id/btn_activity_setcpasscode_num5"
                        app:textchar="mno"
                        app:textNum="6"
                        android:textColor="#ffffffff"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lot_num_line3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lot_num_line2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="15.0dip">

                    <com.abc.xyz.views.partials.KeypadItemLayout
                        android:id="@+id/btn_activity_setcpasscode_num7"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_marginRight="15.0dip"
                        app:textchar="pqrs"
                        app:textNum="7"
                        android:textColor="#ffffffff"
                        />

                    <com.abc.xyz.views.partials.KeypadItemLayout
                        android:id="@+id/btn_activity_setcpasscode_num8"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_marginRight="15.0dip"
                        android:layout_toRightOf="@id/btn_activity_setcpasscode_num7"
                        app:textchar="tuv"
                        app:textNum="8"
                        />

                    <com.abc.xyz.views.partials.KeypadItemLayout
                        android:id="@+id/btn_activity_setcpasscode_num9"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_toRightOf="@id/btn_activity_setcpasscode_num8"
                        app:textchar="wxyz"
                        app:textNum="9"
                        android:textColor="#ffffffff"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lot_num_line4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lot_num_line3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="15.0dip">

                    <com.abc.xyz.views.widgets.ButtonIPBold
                        android:id="@+id/btn_activity_setcpasscode_num0"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:background="@drawable/bg_pressed_keypad"
                        android:text="0"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/_27sdp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

        <com.abc.xyz.views.widgets.TextviewIPBold
            android:id="@+id/txv_activity_setcpasscode_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="15.0dip"
            android:background="@drawable/bg_border_imagetxv"
            android:text="@string/w_cancel"
            android:padding="10dp"
            android:textColor="#ffffffff"
            android:textSize="@dimen/_16sdp"/>
    </RelativeLayout>
</RelativeLayout>