<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <LinearLayout
            android:gravity="right"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.abc.xyz.views.widgets.TextviewIPBold_ChangeColor
                    android:id="@+id/tv_pager_widget_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_toLeftOf="@+id/tv_pager_widget_time_am"
                    android:text="12:00"
                    android:textColor="#f9fbe7"
                    android:textSize="@dimen/_70sdp" />
                <com.abc.xyz.views.widgets.TextviewIPBold_ChangeColor
                    android:layout_alignParentRight="true"
                    android:id="@+id/tv_pager_widget_time_am"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_16sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:shadowColor="#1a1717"
                    android:shadowDx="1"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:text="AM"
                    android:textColor="#f9fbe7"
                    android:textSize="@dimen/_20sdp" />

            </RelativeLayout>


            <com.abc.xyz.views.widgets.TextviewIPBold_ChangeColor
                android:id="@+id/tv_pager_widget_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="#1a1717"
                android:shadowDx="1"
                android:shadowDy="0"
                android:shadowRadius="2"
                android:text="Thứ 4, 22 tháng 3"
                android:textColor="#f9fbe7"
                android:textSize="@dimen/_30sdp" />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/lnl_pager_widget"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </LinearLayout>

        </ScrollView>

    </LinearLayout>
    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_pager_widget_blur"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>