<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/iv_fragment_init_pass_bg"/>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="bold-font"
                android:paddingTop="15dp"
                android:textSize="@dimen/_18sdp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/enter_password"
                android:textColor="@android:color/white"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_fragment_init_pass_0"
                    android:layout_marginRight="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/password_bg"/>
                <ImageView
                    android:id="@+id/iv_fragment_init_pass_1"
                    android:layout_marginRight="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/password_bg"/>
                <ImageView
                    android:id="@+id/iv_fragment_init_pass_2"
                    android:layout_marginRight="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/password_bg"/>
                <ImageView
                    android:id="@+id/iv_fragment_init_pass_3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/password_bg"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TableRow
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_fragment_screen_num_1"
                    android:layout_marginRight="30dp"
                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:background="@drawable/num_1"/>
                <Button
                    android:id="@+id/btn_fragment_screen_num_2"
                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:background="@drawable/num_2"/>
                <Button
                    android:id="@+id/btn_fragment_screen_num_3"
                    android:layout_marginLeft="30dp"
                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:background="@drawable/num_3"/>
            </TableRow>
            <TableRow
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_fragment_screen_num_4"
                    android:layout_marginRight="30dp"
                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:background="@drawable/num_4"/>
                <Button
                    android:id="@+id/btn_fragment_screen_num_5"
                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:background="@drawable/num_5"/>
                <Button
                    android:id="@+id/btn_fragment_screen_num_6"
                    android:layout_marginLeft="30dp"
                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:background="@drawable/num_6"/>
            </TableRow>
            <TableRow
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_fragment_screen_num_7"
                    android:layout_marginRight="30dp"
                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:background="@drawable/num_7"/>
                <Button
                    android:id="@+id/btn_fragment_screen_num_8"
                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:background="@drawable/num_8"/>
                <Button
                    android:id="@+id/btn_fragment_screen_num_9"
                    android:layout_marginLeft="30dp"
                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:background="@drawable/num_9"/>
            </TableRow>
            <TableRow
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_fragment_screen_num_0"
                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:background="@drawable/num_0"/>
            </TableRow>
        </LinearLayout>
    </LinearLayout>
    <com.abc.xyz.os10.views.MyTextView
        android:layout_width="wrap_content"
        android:id="@+id/btn_fragment_passcode_cancel"
        android:textSize="@dimen/_20sdp"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:text="Cancel"/>
</RelativeLayout>