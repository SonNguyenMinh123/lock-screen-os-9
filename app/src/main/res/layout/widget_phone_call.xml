<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_120sdp"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_margin="@dimen/_16sdp"
        app:cardBackgroundColor="#e1ececec"
        app:cardCornerRadius="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:background="#ebececec"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_icon_message"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:padding="@dimen/_4sdp"
                    android:src="@drawable/ic_call" />

                <com.abc.xyz.views.widgets.TextviewIPBold_ChangeColor
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_35sdp"
                    android:text="Phone Book"
                    android:textColor="#787878"
                    android:textSize="@dimen/_13sdp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70sdp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <com.abc.xyz.os10.views.layouts.CustomPhoneCall
                            android:id="@+id/pv_cal_1"
                            android:visibility="gone"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_70sdp"></com.abc.xyz.os10.views.layouts.CustomPhoneCall>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <com.abc.xyz.os10.views.layouts.CustomPhoneCall
                            android:layout_width="@dimen/_70sdp"
                            android:id="@+id/pv_cal_2"
                            android:visibility="gone"
                            android:layout_height="@dimen/_70sdp"></com.abc.xyz.os10.views.layouts.CustomPhoneCall>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <com.abc.xyz.os10.views.layouts.CustomPhoneCall
                            android:layout_width="@dimen/_70sdp"
                            android:id="@+id/pv_cal_3"
                            android:visibility="gone"
                            android:layout_height="@dimen/_70sdp"></com.abc.xyz.os10.views.layouts.CustomPhoneCall>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <com.abc.xyz.os10.views.layouts.CustomPhoneCall
                            android:layout_width="@dimen/_70sdp"
                            android:id="@+id/pv_cal_4"
                            android:visibility="gone"
                            android:layout_height="@dimen/_70sdp"></com.abc.xyz.os10.views.layouts.CustomPhoneCall>
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/centerImageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:contentDescription="Divider"
                    android:src="@android:color/black" />

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>