<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/_10sdp"
    android:paddingRight="@dimen/_10sdp"
    android:paddingTop="@dimen/_5sdp"
    android:paddingBottom="@dimen/_5sdp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_82sdp"
        android:padding="@dimen/_10sdp"
        app:cardBackgroundColor="#e1ececec"
        app:cardCornerRadius="@dimen/_10sdp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:background="#ebececec"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp">

                <ImageView
                    android:padding="@dimen/_4sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:id="@+id/iv_icon_message"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_message" />

                <com.abc.xyz.os10.views.MyTextView
                    android:textColor="#787878"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_35sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MESSAGES"
                    android:textSize="@dimen/_13sdp" />

                <com.abc.xyz.os10.views.MyTextView
                    android:id="@+id/tv_item_message_time"
                    android:layout_marginRight="@dimen/_7sdp"
                    android:textColor="#787878"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="now"
                    android:textSize="@dimen/_13sdp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:orientation="vertical">

                <com.abc.xyz.os10.views.MyTextViewBold
                    android:id="@+id/tv_item_message_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mai Thanhf Dat"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="18dp" />

                <com.abc.xyz.os10.views.MyTextView
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:id="@+id/tv_item_message_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Xin chao"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>