<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/iv_passcode_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:paddingTop="50dp"
                android:text="@string/enter_password"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/lnl_pager_lock_screen_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_activity_screen_lock_pass_0"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/password_bg" />

                <ImageView
                    android:id="@+id/iv_activity_screen_lock_pass_1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/password_bg" />

                <ImageView
                    android:id="@+id/iv_activity_screen_lock_pass_2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/password_bg" />

                <ImageView
                    android:id="@+id/iv_activity_screen_lock_pass_3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/password_bg" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_pager_screen_num_1"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/num_1" />

                <Button
                    android:id="@+id/btn_pager_screen_num_2"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/num_2" />

                <Button
                    android:id="@+id/btn_pager_screen_num_3"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/num_3" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_pager_screen_num_4"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/num_4" />

                <Button
                    android:id="@+id/btn_pager_screen_num_5"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/num_5" />

                <Button
                    android:id="@+id/btn_pager_screen_num_6"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/num_6" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_pager_screen_num_7"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/num_7" />

                <Button
                    android:id="@+id/btn_pager_screen_num_8"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/num_8" />

                <Button
                    android:id="@+id/btn_pager_screen_num_9"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/num_9" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_pager_screen_num_0"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/num_0" />
            </TableRow>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.abc.xyz.os10.views.MyTextView
                android:id="@+id/tv_pager_pass_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="@dimen/_27sdp"
                android:layout_marginBottom="@dimen/_32sdp"
                android:text="Cancel"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_20sdp" />

            <com.abc.xyz.os10.views.MyTextView
                android:id="@+id/tv_pager_pass_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/_27sdp"
                android:layout_marginBottom="@dimen/_32sdp"
                android:text="Clear"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_20sdp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>