<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_70sdp"
    android:layout_height="@dimen/_70sdp"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        app:cardCornerRadius="@dimen/_5sdp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:src="@drawable/ic_contact"
            android:padding="@dimen/_8sdp"
            android:id="@+id/iv_item_call"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <jp.shts.android.library.TriangleLabelView
            android:id="@+id/label_type_call"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            app:backgroundColor="@android:color/holo_red_dark"
            app:corner="leftTop"
            app:labelBottomPadding="0dp"
            app:labelCenterPadding="0dp"
            app:labelTopPadding="12dp" />
    </RelativeLayout>

    </android.support.v7.widget.CardView>

    <com.abc.xyz.views.widgets.TextviewIPBold_ChangeColor
        android:gravity="center"
        android:textSize="@dimen/_10sdp"
        android:textColor="@android:color/black"
        android:id="@+id/tv_item_call"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp"
        android:text="12121212" />
</LinearLayout>