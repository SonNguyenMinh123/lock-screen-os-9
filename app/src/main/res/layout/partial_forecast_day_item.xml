<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.abc.xyz.views.widgets.TextviewIPBold_ChangeColor
        android:id="@+id/dayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="--"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/highImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iconImageView"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@+id/iconImageView"
            android:adjustViewBounds="true"
            android:contentDescription="icon_cont_desc"
            android:maxHeight="15dp"
            android:scaleType="center"
            android:src="@drawable/ic_reduptriangleicon" />

        <com.abc.xyz.views.widgets.TextviewIPBold_ChangeColor
            android:id="@+id/tempTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iconImageView"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@+id/highImageView"
            android:layout_toRightOf="@+id/highImageView"
            android:text="--"
            android:textColor="#ffffff"
            android:textSize="11sp" />
    </LinearLayout>



    <com.abc.xyz.views.widgets.TextviewIPBold_ChangeColor
        android:id="@+id/iconImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:adjustViewBounds="false"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/lowImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iconImageView"
            android:layout_toLeftOf="@+id/iconImageView"
            android:adjustViewBounds="true"
            android:contentDescription="icon_cont_desc"
            android:maxHeight="15dp"
            android:paddingBottom="10dp"
            android:scaleType="center"
            android:src="@drawable/ic_bluedowntriangleicon" />

        <com.abc.xyz.views.widgets.TextviewIPBold_ChangeColor
            android:id="@+id/tempLowTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iconImageView"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@+id/lowImageView"
            android:layout_toRightOf="@+id/lowImageView"
            android:text="--"
            android:textColor="#ffffff"
            android:textSize="11sp" />
    </LinearLayout>
</LinearLayout>