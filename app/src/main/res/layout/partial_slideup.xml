<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <FrameLayout
        android:id="@+id/frl_partial_slideup_cameraheight"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/top">

        <ImageView
            android:id="@+id/img_partial_unlock_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="15dp"
            android:src="@drawable/ic_camera"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trans"
        android:background="#82bebebe"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_partial_slideup_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:src="@drawable/ic_arrow"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/imb_partial_slideup_wifi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/bg_checked_wifi"
                />

            <ImageButton
                android:id="@+id/imb_partial_slideup_bluetooth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/bg_checked_bluetooth"
                />

            <ImageButton
                android:id="@+id/imb_partial_slideup_mute"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/bg_checked_mute"
                />

            <ImageButton
                android:id="@+id/imb_partial_slideup_orientation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/bg_checked_orientation"
                />

            <ImageButton
                android:id="@+id/imb_partial_slideup__lock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/bg_checked_slideup_lock"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:alpha="0.9"
            android:background="#82939393">

            <SeekBar
                android:id="@+id/skb_partial_slideup_brightness"
                style="@style/SeekBarAppThemeColorize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/imageView2"
                android:layout_toRightOf="@+id/imageView1"
                android:progress="50"/>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/ic_brightness_sub"/>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/ic_brightness_plus"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <com.abc.xyz.views.widgets.TextviewIPBold
                    android:id="@+id/txv_partial_slideup__time_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="00:00"
                    android:textColor="@android:color/background_dark"/>

                <SeekBar
                    android:id="@+id/nowPlayingSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/txv_partial_slideup__time_duration"
                    android:layout_toRightOf="@+id/txv_partial_slideup__time_play"
                    android:indeterminate="false"
                    android:progress="0"
                    android:thumb="@drawable/ic_thumb_music"/>

                <com.abc.xyz.views.widgets.TextviewIPBold
                    android:id="@+id/txv_partial_slideup__time_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:text="00:00"
                    android:textColor="@android:color/background_dark"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/txv_layout_music__name_song"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:shadowColor="@android:color/black"
                android:shadowRadius="20"
                />

            <TextView
                android:id="@+id/txv_layout_music__name_author"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/controllers"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:shadowColor="@android:color/black"
                android:shadowRadius="20"
                />


            <LinearLayout
                android:id="@+id/rll_partial_slideup__music"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageButton
                    android:id="@+id/imb_partial_slideup__repeat"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="?android:selectableItemBackground"
                    android:scaleType="centerInside"
                    android:src="@drawable/bg_checked_repeat_song"/>

                <ImageButton
                    android:id="@+id/imb_partial_slideup__prev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/bg_pressed_prev"
                    />

                <ImageButton
                    android:id="@+id/imb_partial_slideup__play_or_pase"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/bg_checked_play_or_pause"
                    android:checked="false"
                    android:gravity="center"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:textOff=""
                    android:textOn=""/>

                <ImageButton
                    android:id="@+id/imb_partial_slideup__next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/bg_pressed_next"
                    />

                <ImageButton
                    android:id="@+id/imb_partial_slideup__menu_music"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="?android:selectableItemBackground"
                    android:scaleType="centerInside"
                    android:src="@drawable/bg_pressed_music_menu"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <SeekBar
                    android:id="@+id/skb_partial_slideup_volumn"
                    style="@style/SeekBarAppThemeColorize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/imageView4"
                    android:layout_toRightOf="@+id/imageView3"
                    android:progress="50"/>

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_volumn_down"/>

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_volumn_up"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.9"
                android:background="#82939393"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rll_partial_slideup__music"
                android:gravity="bottom"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imv_partial_slideup_flash"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:src="@drawable/bg_btnslide_flash"/>

                <ImageView
                    android:id="@+id/imv_partial_slideup_timmer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:src="@drawable/bg_btnslide_timer"/>

                <ImageView
                    android:id="@+id/imv_partial_slideup_calculator"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:src="@drawable/bg_btnslide_calculator"/>

                <ImageView
                    android:id="@+id/imv_partial_slideup_camera"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:src="@drawable/bg_btnslide_camera"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>